{
  "name": "yard-server",
  "version": "0.1.0",
  "description": "server for virtual yard",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register src/index.ts",
    "lint": "npx eslint ./src --ext .js,.jsx,.ts,.tsx --fix",
    "generate-schema": "npx schema-codegen src\\rooms\\schema\\YardState.ts --ts --output ..\\common\\schema\\",
    "loadtest": "colyseus-loadtest loadtest/loadtest.ts --room yard --numClients 70",
    "build": "ttsc",
    "start": "node dist/yard-server/src/index.js"
  },
  "author": "Stefan Neubert <dev@steditor.net>",
  "license": "MIT",
  "devDependencies": {
    "@colyseus/loadtest": "^0.14.2",
    "@types/express": "^4.17.11",
    "@types/randomcolor": "^0.5.5",
    "@types/serve-static": "^1.13.9",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "eslint": "^7.22.0",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.2.3",
    "typescript-transform-paths": "^2.2.3"
  },
  "dependencies": {
    "@colyseus/command": "^0.1.6",
    "@colyseus/monitor": "^0.14.3",
    "ajv": "^7.2.1",
    "colyseus": "^0.14.10",
    "express": "^4.16.4",
    "express-basic-auth": "^1.2.0",
    "http-proxy-middleware": "^1.0.6",
    "nanoid": "^3.1.22",
    "randomcolor": "^0.6.2",
    "serve-static": "^1.14.1"
  }
}
