{
  "compilerOptions": {
    // type checking
    "strict": true,

    // modules
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@yard/common/*": ["./common/src/*"]
    },
    "module": "esnext",

    // emit
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "importHelpers": true,

    // interop constraints
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // language and environment
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES2020",

    // projects
    "composite": true,

    // completeness
    "skipLibCheck": true
  }
}
